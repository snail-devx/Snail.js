// https://www.tslang.cn/docs/handbook/compiler-options.html
// 做为全局项目下ts配置，不作为build、.d.ts构建的配置
{
    "extends": "./tsconfig.base.json",
    //  支持js类型检查
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "outDir": "./temp"
    },
    "exclude": [
        "node_modules",
        "packages/*/obsolete",
        "packages/*/test/**/*.js",
        "packages/snail.vue-example/src/libraries/*.js"
    ],
    //  包含所需的所有ts文件
    "include": [
        "packages/*/src",
        "packages/*/test/web",
        "packages/*/rollup.config.js",
        "scripts/**/*.js",
        "typings/**/*.d.ts",
        "packages/snail.vue/obsolete/tree-util.ts",
    ]
}